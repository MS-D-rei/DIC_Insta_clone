<% if logged_in? %>
  <%= link_to 'logout', logout_path, method: :delete %>
  <div class='row'>
    <div class='col-8 content-area'>
      <ol>
      <%= render @posts %>
      </ol>
    </div>
    <div class='col'>
        <% if current_user.image.file %>
        <%= image_tag current_user.image.url, class: 'profile-image' %><br>
        <% end %>
        <h5><%= current_user.name %></h5>
    </div>
  </div>
<% else %>
  <%= render template: 'sessions/new' %>
<% end %>
